<header class="page_block">
    {{#with header}}
        <div class="header">
            <div class="logo">
                <span class="badge">{{brandName}}</span>
            </div>
            <nav class="header_nav">
                <div class="header_nav_right">
                    <div class="nav {{#if isVertical}}nav_vertical{{else}}nav_inLine{{/if}}">
                        {{#each links}}
                            <a href="{{url}}" class="nav_link">{{text}}</a>
                        {{/each}}
                    </div>
                </div>
            </nav>
        </div>
        <div class="header_ad">
            <div class="ad_blok">
                <div class="ad">Ad</div>
            </div>
            {{#with ad}}
                <span class="ad_text">{{text}} : <a href="url" class="ad_url">{{url}}</a> </span>
            {{/with}}
            <div class="us_online">Users online:{{userOnline}}</div>
        </div>
    {{/with}}
</header>