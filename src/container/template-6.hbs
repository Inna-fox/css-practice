<header class="page_block">
    <div class="header row g-0">
        <div class="col-3">
            {{> logo}}
        </div>
        <nav class="header_nav col-9">
            <div class="header_nav_right">
                {{>nav list=header}}
            </div>
        </nav>
    </div>
    {{>divider}}
</header>

<main class="main">
    {{#with info}}
        <div class="info">
            <h1 class="info_title">{{title}}</h1>
            <p class="info_text">{{description}}</p>
        </div>
    {{/with}}

    {{#with form}}
        <form class="form">
            <h2 class="form_title">{{title}}</h2>
             
            <div class="form_input_list">
                {{#each inputs}}
                    <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="{{id}}" />
                {{/each}}
            </div>

            <div class="form_checkbox">
                <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}" >
                <div></div>
                <label for="{{checkbox.name}}">{{checkbox.label}}</label>
            </div>
            <button type="submit" class="form_button">{{button}}</button>
            <p class="form_info">{{info}}</p>
        </form>   
    {{/with}}
</main>

<div class="updates">
    {{#with updates}}
        <div class="update_title">
            <strong class="up_title">{{title}}</strong>
        </div>
        {{#each list}}
            <div class="up_list">
                <div class="kv"></div>
                <div class="list">
                    <div class="up_nickname">@{{nickname}}</div>
                    <p class="up_text">{{description}}</p>
                </div>
            </div>
        {{/each}}
        {{#with show_all}}
            <a href="{{url}}" class="list_link">{{text}}</a>
        {{/with}}
    {{/with}}
</div>

<div class="blok">
    {{#with expirience}}
        <div class="blok_title">
            <h2 class="expir_title">{{title}}</h2>
            <div class="expir_badge">
                <div class="expir_badge_text">{{badge}}</div>
            </div>
        </div>
        <div class="blok_list">
            {{#each list}}
                <div class="expir_list">
                    <strong class="list_name">{{name}}</strong>
                    <p class="list_text">{{details}}</p>
                </div>
            {{/each}}
        </div>
    {{/with}}
</div>

<footer class="page_block">
    {{>divider}}
    <div class="row footer">
        <div class="col-3">
            {{> logo}}
            <span class="footer-copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
            <div class="col-3">
                <span class="footer_title">{{title}} </span>
                {{>nav list=links isVertical=true}}
            </div>
        {{/each}}
    </div>
</footer>
    
