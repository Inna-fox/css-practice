<header class="page_block">
    <div class="header row g-0">
        <div class="col-3">
            {{> logo}}
        </div>
        <nav class="header_nav col-9">
            <div class="header_nav_right">
                {{>nav list=header}}
            </div>
        </nav>
    </div>
    {{>divider}}
</header>

<main class="main">
    {{#with main}}
        <img src="{{image}}" alt="Main image" class="main_img">
        <div class="main_content">
            <h2 class="main_title">{{heading}}</h2>
            <p class="main_text">{{descriotion}}</p>
            <a class="button main_button" href="{{hre}}">{{button}}</a>
        </div>
    {{/with}}
</main>

<div class="card">
    {{#each featured}}
        <div class="card_content">
            <div class="card_image" style="background-image: url({{photo}})"></div>
            <h2 class="card_title">{{heading}}</h2>
            <p class="card_text">{{info}}</p>
            <a class="card_link" href="{{linkUrl}}">{{linkText}}</a>
        </div>
    {{/each}}
</div>


<div class="form">
    {{#each actions}}
        <div class="form_content">
            <h3 class="form_title">{{heading}}</h3>
            <a href="{{url}}" class="button form_button">{{text}}</a>
        </div>
    {{/each}}
</div>


<footer class="page_block">
    {{>divider}}
    <div class="row footer">
        <div class="col-3">
            {{> logo}}
            <span class="footer-copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
            <div class="col-3">
                <span class="footer_title">{{title}} </span>
                {{>nav list=links isVertical=true}}
            </div>
        {{/each}}
    </div>
</footer>
    
